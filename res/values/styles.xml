<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowActionBar">false</item>
    	<item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="actionbarTitle">
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="actionbarLeft">
        <item name="android:layout_centerVertical">true</item>
    </style>
    
    <style name="actionbarRight">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    
    <style name="sideNavList">
    	<item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">53dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>
    
    <style name="sideNavListItemLeft">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    
    
    <style name="sideNavListNewDot">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:layout_marginLeft">9dp</item>
        <item name="android:src">@drawable/new_dot</item>
    </style>
    
    
    <style name="sideNavListSep">
    	<item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#33ffffff</item>
    </style>
    
    <style name="sideNavListTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="sideNavListArrow">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">12.5dp</item>
        <item name="android:src">@drawable/arrow_right</item>
        <item name="android:layout_gravity">center_vertical</item> 
    </style>
    
    
</resources>